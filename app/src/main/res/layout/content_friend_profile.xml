<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main.profiles.FriendProfile"
    tools:showIn="@layout/activity_friend_profile"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:background="?android:selectableItemBackground"
            android:id="@+id/deleteAllChat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/delete_friend_button_background"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Delete\nall\n chats"
            android:textSize="12sp"
            android:layout_marginBottom="50dp"/>
        <Button
            android:background="?android:selectableItemBackground"
            android:id="@+id/blockFriend"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/delete_friend_button_background"
            android:drawableTop="@drawable/ic_block_black"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="block\nFriend"
            android:textSize="12sp"
            android:layout_marginBottom="50dp"/>
        <!--<Button
            android:background="?android:selectableItemBackground"
            android:id="@+id/deleteFriend"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/delete_friend_button_background"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Delete\nFriend"
            android:textSize="12sp"
            android:layout_marginBottom="50dp"/>
        -->



    </LinearLayout>



</androidx.core.widget.NestedScrollView>